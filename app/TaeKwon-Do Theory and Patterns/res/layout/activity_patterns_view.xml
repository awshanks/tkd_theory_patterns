<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svTheory"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/patternlistview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <ImageView
            android:id="@+id/patterndiagram"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Pattern Image"
            android:padding="10dip" />

        <TextView
            android:id="@+id/patternmovementheading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            style="@style/OtherTitleText"
            android:text="Pattern Movements"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/patternmovement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="" />
    </LinearLayout>

</ScrollView>