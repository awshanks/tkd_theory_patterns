<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svMainMenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/TitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_title" />

        <Button
            android:id="@+id/bHistory"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/newbutton"
            android:text="History" />

        <Button
            android:id="@+id/bTheory"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/newbutton"
            android:text="Theory" />

        <Button
            android:id="@+id/bStepSparring"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/newbutton"
            android:enabled="true"
            android:text="2 Step Sparring" />

        <Button
            android:id="@+id/bPatterns"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/newbutton"
            android:enabled="true"
            android:text="Patterns" />

        <!-- 
        <Button
            android:id="@+id/bQuiz"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/newbutton"
            android:enabled="false"
            android:text="Quiz" />

        <Button
            android:id="@+id/bFlashCards"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/newbutton"
            android:enabled="false"
            android:text="Flash Cards" />
            
             -->
    </LinearLayout>

</ScrollView>