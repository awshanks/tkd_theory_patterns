		String queryString = null;

		if (value == 1) {
			queryString = "SELECT _id, beltname, videourl, patternmeaning, diagram, movements FROM patterns where patternnumber = '1'";
		}
		if (value == 2) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 3) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 4) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 5) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 6) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 7) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 8) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 9) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}
		if (value == 10) {
			// queryString = "SELECT _id, english, korean FROM theory";
		}

		return queryString;

	}

}
